<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragments.CreatNotesFragment"
        android:background="@color/back_col">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtTitle"
                android:padding="15dp"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:textColorHint="#D1D1D1"
                android:hint="title"
                android:background="@drawable/edt_txt_shape"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtSubtitle"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:textColorHint="#D1D1D1"
                android:hint="subtitle"
                android:background="@drawable/edt_txt_shape"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:id="@+id/Pgreen"
                    android:layout_height="25dp"
                    android:background="@drawable/green_dot" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/Pyellow"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/yello_dot"/>
                <ImageView
                    android:layout_width="25dp"
                    android:id="@+id/Pred"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/red_dot"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtNotes"
                android:layout_height="350dp"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:gravity="start"
                android:textColorHint="#D1D1D1"
                android:hint="Notes..."
                android:background="@drawable/edt_txt_shape"/>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveNotes"
            android:src="@drawable/baseline_check_24"
            android:layout_gravity="bottom|right"
            android:layout_margin="26dp"
            android:backgroundTint="@color/red_col"/>


    </FrameLayout>
</layout>