<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#707070"
            app:cardCornerRadius="10dp">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/viewDot"
                android:background="@drawable/red_dot"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="345dp"
                    android:id="@+id/title"
                    android:layout_height="wrap_content"
                    android:text="NotesApplication"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/discription"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="#E4DFDF"
                    android:text="My name is Ayush singh and i am the Smartest guy ever on the history of earth" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24 feb 2024"
                    android:textSize="18sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>